<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="#c7c7c7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/zeleniDolar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_attach_money_24"/>

    <TextView
        android:id="@+id/naslovListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naslov"
        app:layout_constraintStart_toEndOf="@+id/zeleniDolar"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        style="@style/textViewStyle"
        android:layout_marginTop="7dp"/>
    
    <TextView
        android:id="@+id/kolicina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/naslovListe"
        app:layout_constraintStart_toEndOf="@id/zeleniDolar"
        style="@style/textViewStyle"
        android:layout_marginTop="20dp"/>
    
    <ImageView
        android:id="@+id/kanta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/olovka"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintTop_toBottomOf="@id/kanta"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>